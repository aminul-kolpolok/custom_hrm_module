<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="employee_details_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h2>*** Attendance Report ***</h2>
                    </div>
                    <table class="table table-bordered mt32">
                        <thead>
                            <tr>
                                <th class="text-left">
                                    <span>Reference</span>
                                </th>
                                <th class="text-left">
                                    <span>Employee Name</span>
                                </th>
                                <th class="text-left">
                                    <span>Department</span>
                                </th>
                                <th class="text-left">
                                    <span>Date</span>
                                </th>
                                <th class="text-left">
                                    <span>Check In</span>
                                </th>
                                <th class="text-left">
                                    <span>Check Out</span>
                                </th>
                                <th class="text-left">
                                    <span>Late Time</span>
                                </th>
                                <th class="text-left">
                                    <span>Early Time</span>
                                </th>
                                <th class="text-left">
                                    <span>Worked Hours</span>
                                </th>
                            </tr>
                        </thead>
                        <t t-set="employee_count" t-value="0"/>
                        <t t-foreach="docs" t-as="line">
                            <t t-set="employee_count" t-value="employee_count + 1"/>
                            <tr>
                                <td>
                                    <span t-esc="line.employee_id"/>
                                </td>
                                <td>
                                    <span t-esc="line.employee_name"/>
                                </td>
                                <td>
                                    <span t-esc="line.department"/>
                                </td>
                                <td>
                                    <span t-esc="line.date"/>
                                </td>
                                <td>
                                    <span t-esc="line.check_in"/>
                                </td>
                                <td>
                                    <span t-esc="line.check_out"/>
                                </td>
                                <td>
                                    <span t-esc="line.late_time"/>
                                </td>
                                <td>
                                    <span t-esc="line.early_time"/>
                                </td>
                                <td>
                                    <span t-esc="line.worked_hours"/>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td>
                                <strong>Total Employee:</strong>
                            </td>
                            <td>
                                <strong>
                                    <span t-esc="employee_count"/>
                                </strong>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>
