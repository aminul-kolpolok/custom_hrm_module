<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- views -->

    <record id="view_kpi_attendance_tree" model="ir.ui.view">
        <field name="name">employee.kpi.tree</field>
        <field name="model">employee.kpi</field>
        <field name="arch" type="xml">
            <tree string="Employee KPI Attendances" editable="bottom" sample="1">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours" string="Work Hours" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_kpi_attendance_kanban" model="ir.ui.view">
        <field name="name">employee.kpi.kanban</field>
        <field name="model">employee.kpi</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <img t-att-src="kanban_image('hr.employee', 'avatar_128', record.employee_id.raw_value)" t-att-title="record.employee_id.value" t-att-alt="record.employee_id.value" class="oe_kanban_avatar o_image_24_cover mr4"/>
                                <span class="o_kanban_record_title">
                                    <strong><t t-esc="record.employee_id.value"/></strong>
                                </span>
                            </div>
                            <hr class="mt4 mb8"/>
                            <div class="o_kanban_record_subtitle">
                                <i class="fa fa-calendar" aria-label="Period" role="img" title="Period"></i>
                                <t t-esc="record.check_in.value"/>
                                - <t t-esc="record.check_out.value"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.ui.view" id="hr_kpi_attendance_view_form">
        <field name="name">employee.kpi.form</field>
        <field name="model">employee.kpi</field>
        <field name="arch" type="xml">
            <form string="Employee KPI System Management">
                <sheet>
                    <group string="Employee KPI Information">
                        <hr/>
                        <br/>
                        <group>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="check_in"/>
                        </group>
                        <group>
                            <field name="check_out"/>
                        </group>

                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_kpi_attendance_action" model="ir.actions.act_window">
        <field name="name">KPI Attendances</field>
        <field name="res_model">employee.kpi</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No attendance records found
            </p><p>
                The attendance records of your employees will be displayed here.
            </p>
        </field>
    </record>



    <menuitem id="menu_hr_kpi_attendance_attendances_overview" name="Employee KPI" parent="hr_attendance.menu_hr_attendance_root" sequence="6" action="hr_kpi_attendance_action"/>
</odoo>
